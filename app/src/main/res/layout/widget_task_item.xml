<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Checkbox -->
    <ImageButton
        android:id="@+id/widget_task_checkbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_radio_button_unchecked"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:tint="@color/widget_text_secondary"
        android:contentDescription="@string/toggle_task_completion" />

    <!-- Priority Indicator -->
    <View
        android:id="@+id/widget_priority_indicator"
        android:layout_width="4dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:background="@color/priority_medium" />

    <!-- Task Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Title"
            android:textSize="14sp"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_task_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal"
            android:textSize="12sp"
            android:textColor="@color/widget_text_secondary"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>
